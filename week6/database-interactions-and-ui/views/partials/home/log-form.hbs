<form id="logForm" method="post">
    <div class="field">
      <label class="label" for="name">Workout Name:</label>
      <div class="control">
        <input class="input" type="text" name="name" id="name" required>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label" for="reps">Reps:</label>
        <input class="input" type="number" min="0" name="reps" id="reps" required>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label" for="weight">Weight:</label>
        <input class="input" type="number" min="0" name="weight" id="weight" required>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label" for="date">Date:</label>
        <input class="input" type="date" min="1900-01-01" name="date" id="date">
      </div>
    </div>
    <div class="field">
      <label class="label" for="units">Units</label>
        <div class="control">
          <label class="radio" for="kilos">
            <input type="radio" id="kilos" name="units" value="0" checked />
            Kilograms
          </label>
          <label class="radio" for="lbs">
            <input type="radio" id="lbs" name="units" value="1" />
            Pounds
          </label>
        </div>
    </div>
    <div class="control">
      <input class="button is-link" type="submit" value="Log Workout">
    </div>
</form>